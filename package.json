{
  "name": "bath",
  "description": "A simple path template engine",
  "version": "2.1.0",
  "author": {
    "name": "bouzuya",
    "email": "m@bouzuya.net",
    "url": "http://bouzuya.net/"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "4"
          }
        }
      ],
      "power-assert"
    ]
  },
  "bugs": {
    "url": "https://github.com/bouzuya/bath/issues"
  },
  "devDependencies": {
    "@types/node": "^9.3.0",
    "@types/power-assert": "1.4.29",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-power-assert": "^2.0.0",
    "beater": "^5.0.1",
    "cpx": "1.5.0",
    "npm-run-all": "^4.1.2",
    "power-assert": "^1.4.4",
    "proxyquire": "^1.8.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.2.0",
    "typescript": "^2.6.2",
    "watch": "1.0.2"
  },
  "files": [
    "_",
    "index.d.ts",
    "index.js",
    "names.d.ts",
    "names.js",
    "params.d.ts",
    "params.js",
    "path.d.ts",
    "path.js"
  ],
  "homepage": "https://github.com/bouzuya/bath#readme",
  "keywords": [],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bouzuya/bath.git"
  },
  "scripts": {
    "build": "npm-run-all -s 'build:ts' 'build:es2015' 'copy'",
    "build:es2015": "babel --quiet -d .tmp/es5/ .tmp/es2015/",
    "build:ts": "tsc",
    "clean": "rimraf '*.d.ts' '*.js' '.tmp' 'lib'",
    "copy": "npm-run-all -p 'copy:*'",
    "copy:dts": "cpx '.tmp/es2015/src/**/*.d.ts' '.'",
    "copy:js": "cpx '.tmp/es5/src/**/*.js' '.'",
    "prepare": "npm-run-all -s 'clean' 'build'",
    "test": "node .tmp/es5/test/index.js",
    "watch": "npm-run-all -p 'watch:*'",
    "watch:es2015": "npm run build:es2015 -- --watch",
    "watch:test": "watch --wait 2 'npm test' '.tmp/es5/test/'",
    "watch:ts": "npm run build:ts -- --watch"
  }
}
