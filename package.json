{
  "name": "bath",
  "description": "A simple path template engine",
  "version": "1.0.0",
  "author": {
    "name": "bouzuya",
    "email": "m@bouzuya.net",
    "url": "http://bouzuya.net/"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "beater": {
    "dir": "./.tmp/es5/test/",
    "require": [
      "./scripts/enable-power-assert.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/bouzuya/bath/issues"
  },
  "dependencies": {
    "path-to-regexp": "1.7.0"
  },
  "devDependencies": {
    "@types/power-assert": "1.4.29",
    "babel-cli": "6.22.0",
    "babel-preset-es2015": "6.22.0",
    "beater": "0.4.1",
    "beater-cli": "0.2.4",
    "cpx": "1.5.0",
    "espower-loader": "1.2.0",
    "npm-run-all": "4.0.2",
    "power-assert": "1.4.2",
    "proxyquire": "1.7.11",
    "rimraf": "2.6.1",
    "sinon": "1.17.4",
    "typescript": "2.2.1",
    "watch": "1.0.2"
  },
  "files": [
    "_",
    "index.d.ts",
    "index.js",
    "params.d.ts",
    "params.js",
    "path.d.ts",
    "path.js"
  ],
  "homepage": "https://github.com/bouzuya/bath#readme",
  "keywords": [],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bouzuya/bath.git"
  },
  "scripts": {
    "build": "npm-run-all -s 'build:ts' 'build:es2015' 'copy'",
    "build:es2015": "babel .tmp/es2015/ -d .tmp/es5/",
    "build:ts": "tsc",
    "clean": "rimraf '*.d.ts' '*.js' '.tmp' 'lib'",
    "copy": "npm-run-all -p 'copy:*'",
    "copy:dts": "cpx '.tmp/es2015/src/**/*.d.ts' '.'",
    "copy:js": "cpx '.tmp/es5/src/**/*.js' '.'",
    "prepublish": "npm-run-all -s 'clean' 'build'",
    "test": "beater",
    "watch": "npm-run-all -p 'watch:*'",
    "watch:es2015": "npm run build:es2015 -- --watch",
    "watch:test": "watch --wait 2 'npm test' '.tmp/es5/test/'",
    "watch:ts": "npm run build:ts -- --watch"
  }
}
